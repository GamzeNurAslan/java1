import java.util.Scanner;
public class Metotoplam{
   public static String ters_yazma(String metin){
       String ters="";
      for(int i=metin.length()-1;i>=0;i--){
         ters+=metin.charAt(i);
      }
      return ters;
   }public static void main(String [] args){
   Scanner k=new Scanner(System.in);
            System.out.print("Metin yazınız=");
            String metin=k.nextLine();
            System.out.println("Ters yazılmış şekli:"+ters_yazma(metin));
   }
}
